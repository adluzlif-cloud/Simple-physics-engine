<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.Label?>
<VBox spacing="10"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.SettingsController">
    <CheckBox fx:id="trailCheckBox" text="Show trajectories"/>
    <CheckBox fx:id="gunCheckBox" text="Ratatatata"/>
    <CheckBox fx:id="fieldCheckBox" text="Show gravitational field"/>

    <Label text="Gun direction"/>
    <Slider fx:id="directionSlider" min="0" max="360" value="0" majorTickUnit = "90" showTickLabels="true"/>

    <Label text="Gun spread"/>
    <Slider fx:id="spreadSlider" min="0" max="45" value="5" majorTickUnit = "15" showTickLabels="true"/>

    <Label text="Time speed"/>
    <Slider fx:id="timeSlider" min="0.1" max="5.0" value="1.0" majorTickUnit="1" showTickLabels="true"/>
    <Button text="Close" onAction="#close"/>

</VBox>